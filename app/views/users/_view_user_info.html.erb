<head>
  <style>
    .row { 
      margin-top:20px;
      margin-bottom:20px;
    }
    .col-md-4 {
      margin-top:15px;
    }
    a.btn:visited {
      color: white;
    }
  </style>
</head>

<h2 style="margin-top:0px;"> <%= @user.full_name %> </h2>
<div class="col-md-9"> 
  <table class="table table-user-information">
    <tbody>
      <tr>
        <td><b>Email:</b></td>
        <td><a href="mailto:<%= @user.email%>"><%= @user.email%></td>
      </tr>
      <tr>
        <td><b>Permissions:</b></td>
        <td><%= @user.getPermission%></td>
      </tr>
      <tr>
        <td><b>Compensated Hours:</b></td>
        <td><%= @user.compensated_hours%></td>
      </tr>
      <tr>
        <td><b>Preference form visible:</b></td>
        <td><%= @user.preference_open%></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="col-md-3">
  <%= link_to 'Toggle Preference Form for ' + @user.full_name, admin_view_user_path(:change_preference_for_id => @user.id), :class=>"btn btn-theme" %>
  <%= link_to('Edit Profile', edit_profile_path(:id => @user.id), :class => 'btn btn-theme') %>
</div>

