<!-- Modal content-->
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    <%=form_tag email_admin_path, :id => 'email_form', :remote => true, :method => "post", :class => "form-horizontal" do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Email the Workshift Manager</h4>
      </div>
      <div class="modal-body">
        <p><b>Comments for this shift:</b></p>
        <div style="padding-left:10%;"id="shift_info_email"></div>
      </div>
      <div class="modal-footer">
        <div class="form-group">
          <label for="message" class="col-sm-2 control-label">Your Name</label>
          <div class="col-sm-10">
              <input name="name" required value="<%= if current_user; current_user.full_name; end %>" id="name" type="text" class="form-control validate">
          </div>
        </div>
        <div class="form-group">
          <label for="message" class="col-sm-2 control-label">Message</label>
          <div class="col-sm-10">
              <input name="name" data-minlength="5" required id="message" type="text" class="form-control validate">
          </div>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" data-dismiss="modal">Submit</button>
      </div>
    <% end %>
    </div>
  </div>
</div>
