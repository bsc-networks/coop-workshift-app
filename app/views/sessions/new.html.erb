<div id="loginModal"  tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: "flash #{key}" %>
        <% end %>
      <div class="modal-header">
          <h1 class="text-center" style="color:#00b3fe">Login</h1>
      </div>
      <div class="modal-body">
        
          <%= form_tag '/login',{:class => 'form col-md-12 center-block'} do %>
          <div class="form-group">
            <%= text_field_tag :email, "", {class: "form-control input-lg", placeholder: "Email"} %> 
          </div>
          <div class="form-group">
            <%= password_field_tag :password,"", {class: "form-control input-lg", placeholder: "Password"} %>
          </div>
          <div class="form-group">
            <%= submit_tag "Log In", class: "btn btn-primary btn-lg btn-block" %>
          </div>
          <% end %>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
		  </div>	
      </div>
  </div>
  </div>
</div>
