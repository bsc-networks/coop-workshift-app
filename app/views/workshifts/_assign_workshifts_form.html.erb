<div id="toolbar">
</div>
<table  class="table table-striped table-hover" id="signed-off-shifts"
                      data-toolbar="#toolbar"
                      data-show-columns="true" data-show-export="true"
                      data-toggle="table" data-search="true"
                      data-show-pagination-switch="true" data-pagination="true"
                      data-page-list="[10, 25, 50, 100, ALL]">
  <thead>
    <tr>
      <th data-sortable="true">Category</th>
      <th data-sortable="true">Name</th>
      <th data-sortable="true">Monday</th>
      <th data-sortable="true">Tuesday</th>
      <th data-sortable="true">Wednesday</th>
      <th data-sortable="true">Thursday</th>
      <th data-sortable="true">Friday</th>
      <th data-sortable="true">Saturday</th>
      <th data-sortable="true">Sunday</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td> Kitchen </td>
        <td> Dishes </td>
        <% (0..6).each do |_| %>
          <td>
            <div class="input-group">
              <input id="market_sell_by" value="" type="text" name="policy[market_sell_by]" style="max-width:350px;"class="form-control" aria-label="Amount (to the nearest dollar)">
            </div>
          </td>
        <% end %>
      </tr>
  </tbody>
</table>

